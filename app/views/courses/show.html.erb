<h2>Course</h2>

<div>
  <strong>Name:</strong>
  <%= @course.name %>
</div>

<div>
  <strong>Description:</strong>
  <%= @course.description %>
</div>

<div>
  <strong>Teacher:</strong>
  <%= render @course.teacher %>
</div>

<% if current_user %>
  <%= button_to "Enroll", enrollments_path(enrollment: { course_id: @course.id, student_id: current_user.id }) %>
<% end %>
