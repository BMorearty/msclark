<!DOCTYPE html>
<html>
<head>
  <title>I Lrnz U</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= request.params[:controller] %> <%= request.params[:action] %>">

  <div id="notice"><%= notice %></div>
  <div id="alert"><%= alert %></div>

  <% if current_user %>
    <div class="current-user"><%= current_user.name %> - <%= link_to "Logout", logout_path %></div>
  <% else %>
    <div class="new-account"><%= link_to "Make me a account", new_student_path %></div>
  <% end %>

  <h1><%= link_to "I Lrnz U", root_path %></h1>

  <%= yield %>

</body>
</html>
